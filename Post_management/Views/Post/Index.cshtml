@model IEnumerable<Post>

<div>
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Post List</h2>
        </div>

        <div class="col-6">
            <a asp-controller="Post" asp-action="Create" class="btn btn-primary">
                Create New Post
            </a>
        </div>
    </div>

    @if (Model.Count() > 0)
    {
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                Title
            </th>
            <th>
                Contents
            </th>
            <th>
                Categories
            </th>
            <th>
                Tags
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var post in Model)
        {
<tr>
    <td width="20%">
        @post.Id
    </td>
    <td width="20%">
        @post.Title
    </td>
    <td width="30%">
        @post.Content
    </td>
    <td width="15%">
        @post.CategoriesId
    </td>
    <td width="15%">
        @post.TagsId
    </td>
    <td>
        <div>
            <a asp-controller="Infor" asp-action="Edit" asp-route-Id="@post.Id" class="btn btn-primary"><i class="fas fa-edit"></i></a>
            <a asp-controller="Infor" asp-action="Delete" asp-route-Id="@post.Id" class="btn btn-danger"><i class="fas fa-trash-alt"></i></a>
        </div>
    </td>
</tr>
}
    </tbody>
</table> }
else
{
<p>Không tồn tại liên lạc trong database</p>}


</div>
